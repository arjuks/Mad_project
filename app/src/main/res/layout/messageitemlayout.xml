<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/senderLabel"
        android:id="@+id/senderlabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/senderName"
        android:maxLength="10"
        android:ellipsize="end"
        android:layout_toRightOf="@id/senderlabel"
        android:layout_toEndOf="@id/senderlabel" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/timeSent"
        android:layout_below="@+id/senderName"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Medium Text"
        android:id="@+id/msgContent"
        android:layout_toLeftOf="@id/timeSent"
        android:layout_toStartOf="@id/timeSent"
        android:layout_below="@id/senderlabel"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteImg"
        android:src="@drawable/bin2"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/msgImg"
        android:layout_below="@+id/msgContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>